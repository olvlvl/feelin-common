<?xml version="1.0" ?>

<feelin:application>

	<Application>
		<Window Id="win" Title="Borders" Open="true">
			<Page>
				<Group Name="border">
					<Group Columns="2" Orientation="vertical">
						<Text Style="border: 1px solid dark;" Chainable="false" Contents="1px solid dark" HCenter="true" VCenter="true" />
						<Text Style="border: 10px solid dark;" Chainable="false" Contents="10px solid dark" HCenter="true" VCenter="true" />
						<Text Style="border: 1px broke dark;" Chainable="false" Contents="1px broke dark" HCenter="true" VCenter="true" />
						<Text Style="border: 10px broke dark;" Chainable="false" Contents="10px broke dark" HCenter="true" VCenter="true" />
						<Text Style="border: 1px ridge dark;" Chainable="false" Contents="1px ridge dark" HCenter="true" VCenter="true" />
						<Text Style="border: 10px ridge dark;" Chainable="false" Contents="10px ridge dark" HCenter="true" VCenter="true" />
					</Group>
					
					<Group Orientation="vertical">
						<Text Style="border: 1px solid dark;" Chainable="false" Contents="1px solid dark" HCenter="true" VCenter="true" />
						<Text Style="border: 10px solid shine;" Chainable="false" Contents="10px solid shine" HCenter="true" VCenter="true" />
						<Text Style="border-top: 1px solid shine; border-right: 2px solid dark; border-bottom: 3px solid shine; border-left: 4px solid dark;" Chainable="false" Contents="1px solid shine<br>2px solid dark<br>3px solid shine<br>4px solid dark" HCenter="true" VCenter="true" />
						<Text Style="border-top: 1px solid white; border-right: 2px solid red; border-bottom: 3px solid lime; border-left: 4px solid blue;" Chainable="false" Contents="1px solid shine<br>2px solid red<br>3px solid lime<br>4px solid blue" HCenter="true" VCenter="true" />

						<Text Style="border: 1px solid shine; border-right-color: dark; border-bottom-color: dark;" Chainable="false" Contents="border: 1px solid shine;<br>border-right-color: dark;<br>border-bottom-color: dark;" HCenter="true" VCenter="true" />
					</Group>
				</Group>

				<Group Name="border-frame">
					<Group Orientation="vertical">
						<Group Rows="2" Class="box" Caption="classic">
							<Text Style="border-frame: classic" Chainable="false" Contents="classic" HCenter="true" VCenter="true" />
							<Text Style="border-frame: classic-in" Chainable="false" Contents="classic-in" HCenter="true" VCenter="true" />
							<Text Style="border-frame: classic-shadow" Chainable="false" Contents="classic-shadow" HCenter="true" VCenter="true" />
							<Text Style="border-frame: classic-shadow-in" Chainable="false" Contents="classic-shadow-in" HCenter="true" VCenter="true" />
						</Group>

						<Group Rows="2" Class="box" Caption="xen">
							<Text Style="border-frame: xen" Chainable="false" Contents="xen" HCenter="true" VCenter="true" />
							<Text Style="border-frame: xen-in" Chainable="false" Contents="xen-in" HCenter="true" VCenter="true" />
							<Text Style="border-frame: xen2" Chainable="false" Contents="xen2" HCenter="true" VCenter="true" />
							<Text Style="border-frame: xen2-in" Chainable="false" Contents="xen2-in" HCenter="true" VCenter="true" />
						</Group>

						<Group Rows="2" Class="box" Caption="kyt">
							<Text Style="border-frame: kyt" Chainable="false" Contents="kyt" HCenter="true" VCenter="true" />
							<Text Style="border-frame: kyt-in" Chainable="false" Contents="kyt-in" HCenter="true" VCenter="true" />
							<Text Style="border-frame: kyt-thick" Chainable="false" Contents="kyt-thick" HCenter="true" VCenter="true" />
							<Text Style="border-frame: kyt-thick-in" Chainable="false" Contents="kyt-thick-in" HCenter="true" VCenter="true" />
						</Group>

						<Group Rows="2" Class="box" Caption="win">
							<Text Style="border-frame: win" Chainable="false" Contents="win" HCenter="true" VCenter="true" />
							<Text Style="border-frame: win-in" Chainable="false" Contents="win-in" HCenter="true" VCenter="true" />
							<Text Style="border-frame: win-in-shadow" Chainable="false" Contents="win-in-shadow" HCenter="true" VCenter="true" />
							<Text Style="border-frame: win2" Chainable="false" Contents="win2" HCenter="true" VCenter="true" />
							<Text Style="border-frame: win2-in" Chainable="false" Contents="win2-in" HCenter="true" VCenter="true" />
							<Text Style="border-frame: win2-in-shadow" Chainable="false" Contents="win2-in-shadow" HCenter="true" VCenter="true" />
						</Group>

						<Group Rows="2" Class="box" Caption="groove">
							<Text Style="border-frame: groove" Chainable="false" Contents="groove" HCenter="true" VCenter="true" />
							<Text Style="border-frame: groove-soft" Chainable="false" Contents="groove-soft" HCenter="true" VCenter="true" />
							<Text Style="border-frame: groove-round" Chainable="false" Contents="groove-round" HCenter="true" VCenter="true" />
							<Text Style="border-frame: groove-in" Chainable="false" Contents="groove-in" HCenter="true" VCenter="true" />
							<Text Style="border-frame: groove-soft-in" Chainable="false" Contents="groove-soft-in" HCenter="true" VCenter="true" />
							<Text Style="border-frame: groove-round-in" Chainable="false" Contents="groove-round-in" HCenter="true" VCenter="true" />
						</Group>

						<Group Class="box" Caption="sweet" Orientation="vertical">
							<Group>
								<Text Style="border-frame: sweet" Chainable="false" Contents="sweet" HCenter="true" VCenter="true" />
								<Text Style="border-frame: sweet-in" Chainable="false" Contents="sweet-in" HCenter="true" VCenter="true" />
							</Group>

							<Group>
								<Text Style="border-frame: sweet-in-nw" Chainable="false" Contents="sweet-in-nw" HCenter="true" VCenter="true" />
								<Text Style="border-frame: sweet-in-ne" Chainable="false" Contents="sweet-in-ne" HCenter="true" VCenter="true" />
								<Text Style="border-frame: sweet-in-se" Chainable="false" Contents="sweet-in-se" HCenter="true" VCenter="true" />
								<Text Style="border-frame: sweet-in-sw" Chainable="false" Contents="sweet-in-sw" HCenter="true" VCenter="true" />
							</Group>
						</Group>
					</Group>

					<Group Orientation="vertical">
						<Group Class="box" Caption="lotan" SameSize="true">
							<Text Style="border-frame: lotan" Chainable="false" Contents="lotan" HCenter="true" VCenter="true" />
							<Text Style="border-frame: lotan-in" Chainable="false" Contents="lotan-in" HCenter="true" VCenter="true" />
						</Group>

						<Group Class="box" Caption="melis" SameSize="true">
							<Text Style="border-frame: melis" Chainable="false" Contents="melis" HCenter="true" VCenter="true" />
							<Text Style="border-frame: melis-in" Chainable="false" Contents="melis-in" HCenter="true" VCenter="true" />
						</Group>

						<Group Class="box" Caption="xp" SameSize="true">
							<Text Style="border-frame: xp" Chainable="false" Contents="xp" HCenter="true" VCenter="true" />
							<Text Style="border-frame: xp-in" Chainable="false" Contents="xp-in" HCenter="true" VCenter="true" />
						</Group>

						<Group Class="box" Caption="import" SameSize="true">
							<Text Style="border-frame: gnome" Chainable="false" Contents="gnome" HCenter="true" VCenter="true" />
							<Text Style="border-frame: be" Chainable="false" Contents="be" HCenter="true" VCenter="true" />
						</Group>
					</Group>
				</Group>

				<Group Name="border-image">
					<Text Chainable="false" Contents="not implemented yet" HCenter="true" VCenter="true" />
				</Group>

				<Group Rows="3" Name="caption">
					<Widget Style="min-width: 100px; min-height: 20px; border-frame: win-in; caption-preparse: &lt;pens up=shine&gt;; background: red; caption-position: up left;" Caption="up left" Chainable="false" />
					<Widget Style="min-width: 100px; min-height: 20px; border-frame: win-in; caption-preparse: &lt;pens up=shine&gt;; background: yellow; caption-position: bottom left;" Caption="bottom left" Chainable="false" />
					<Widget Style="min-width: 100px; min-height: 20px; border-frame: win-in; caption-preparse: &lt;pens up=shine&gt;; background: lime; caption-position: up center;" Caption="up center" Chainable="false" />
					<Widget Style="min-width: 100px; min-height: 20px; border-frame: win-in; caption-preparse: &lt;pens up=shine&gt;; background: aqua; caption-position: bottom center;" Caption="bottom center" Chainable="false" />
					<Widget Style="min-width: 100px; min-height: 20px; border-frame: win-in; caption-preparse: &lt;pens up=shine&gt;; background: blue; caption-position: up right" Caption="up right" Chainable="false" />
					<Widget Style="min-width: 100px; min-height: 20px; border-frame: win-in; caption-preparse: &lt;pens up=shine&gt;; background: fuchsia; caption-position: bottom right" Caption="bottom right" Chainable="false" />
				</Group>

				<!--AdjustFrame Name="Adjust" Couple="true" /-->
			</Page>
		</Window>
	</Application>

	<notify>
		<win attribute="CloseRequest" value="true" target="application" method="Shutdown" />
	</notify>
</feelin:application>
