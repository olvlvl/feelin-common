<?xml version="1.0" ?>

<!ENTITY font1 "Garnet/16">
<!ENTITY font2 "Helvetica/15">
<!ENTITY font3 "Diamond/12">
<!ENTITY font4 "topaz/8">

<feelin:application>
   <Application>
	  <Window Id="win" Title="Feelin : Different fonts" Open="true">
		 <Group Orientation="vertical">
			<Group Class="box" Caption="&font1;" Style="font: &font1;; caption-font: &font1;;">
			   <Button>Save</Button>
			   <Button>Use</Button>
			   <Button>Cancel</Button>
			</Group>

			<Group Class="box" Caption="&font2;" Style="font: &font2;; caption-font: &font2;;">
			   <Button>Save</Button>
			   <Button>Use</Button>
			   <Button>Cancel</Button>
			</Group>

			<Group Class="box" Caption="&font3;" Style="font: &font3;; caption-font: &font3;;">
			   <Button>Save</Button>
			   <Button>Use</Button>
			   <Button>Cancel</Button>
			</Group>

			<Group Class="box" Caption="&font4;" Style="font: &font4;; caption-font: &font4;;">
			   <Button>Save</Button>
			   <Button>Use</Button>
			   <Button>Cancel</Button>
			</Group>
		 </Group>
	  </Window>
   </Application>

   <notify>
	  <win attribute='CloseRequest' value='true' target='application' method='Shutdown' />
   </notify>
</feelin:application>
