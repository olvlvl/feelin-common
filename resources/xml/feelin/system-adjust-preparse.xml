<?xml version="1.0" ?>

<feelin:objects>
    <Group>
        <HGroup>
            <Group SetMax="width">
                <Group class="box" Title="&locale.style;">
                    <Group Columns="2">
                        <VLabel HCenter="false">&locale.bold;</VLabel>
                        <Checkbox id="style-bold" />
                        <VLabel HCenter="false">&locale.italic;</VLabel>
                        <Checkbox id="style-italic"/>
                        <VLabel HCenter="false">&locale.underlined;</VLabel>
                        <Checkbox id="style-underlined" />
                    </Group>
                </Group>
                
                <HGroup class="box" Title="&locale.alignment;">
                    <Cycle id="align" Entries="&adjust.align;" />
                </HGroup>
            </Group>
    

            <Group>
                <Group class="box" Title="&locale.color;">
                    <PopColor id="color" />
                </Group>
               
                <HGroup>
                    <Group class="box" Title="&locale.light;">
                        <PopColor id="pens-light" />
                     
                        <HGroup>
                            <HLabel>&locale.behind;</HLabel>
                            <Checkbox id="pens-light-position" />
                        </HGroup>
                    </Group>
                  
                    <Group class="box" Title="&locale.shadow;">
                        <PopColor id="pens-shadow" />
                     
                        <HGroup>
                            <HLabel>&locale.behind;</HLabel>
                            <Checkbox id="pens-shadow-position" />
                        </HGroup>
                    </Group>
                </HGroup>
            </Group>
        </HGroup>
        
        <Text Class="textinfo" id="test" Text="Testing Baby !" SetMax="height" style="color-scheme: none;" />
    </Group>
</feelin:objects>
