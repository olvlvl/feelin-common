<?xml version="1.0" ?>
                
<feelin:objects>
    <Group Horizontal="true" SameWidth="true">
        <Group class="box" Title="&locale.active;" ContextHelp="&locale.active.help;">
            <Bar Title="&locale.preparse;" />
                                            
            <PopPreParse id="page:preparse-active" />

            <Bar Title="&locale.paddings;" />

            <Group Columns="2" ContextHelp="&locale.active.paddings.help;">
                <HLabel>&locale.top;</HLabel>
                <Slider id="page:active-padding-top" Horizontal="true" Max="16" />
                <HLabel>&locale.bottom;</HLabel>
                <Slider id="page:active-padding-bottom" Horizontal="true" Max="16" />
            </Group>

            <Bar Title="&locale.back;"/>

            <PopImage id="page:tab-back-active" />
        </Group>

        <Group class="box" Title="&locale.inactive;" ContextHelp="&locale.inactive.help;">
            <Bar Title="&locale.preparse;" />
            
            <PopPreParse id="page:preparse-inactive" />

            <Bar Title="Margins & Padding" />

            <Group Columns="2" ContextHelp="&locale.inactive.paddings.help;">
                <HLabel>&locale.top;</HLabel>
                <Slider id="page:inactive-padding-top" Horizontal="true" Max="16" />
                <HLabel>&locale.bottom;</HLabel>
                <Slider id="page:inactive-padding-bottom" Horizontal="true" Max="16" />
                <HLabel>&locale.topmarg;</HLabel>
                <Slider id="page:inactive-margin-top" Horizontal="true" Max="16" />
            </Group>
            
            <Bar Title="&locale.back;"/>
            
            <PopImage id="page:tab-back-inactive" />
        </Group>

        <Group class="box" Title="&locale.general;">
            <Bar Title="&locale.font;" />
            
            <PopFont id="page:tab-font" />

            <Bar Title="&locale.paddings;" />

            <Group Columns="2" ContextHelp="&locale.paddings.help;">
                <HLabel>&locale.paddings.left;</HLabel>
                <Slider id="page:padding-left" Horizontal="true" Max="32" />
                <HLabel>&locale.paddings.right;</HLabel>
                <Slider id="page:padding-right" Horizontal="true" Max="32" />
                <HLabel>&locale.paddings.top;</HLabel>
                <Slider id="page:padding-top" Horizontal="true" Max="32" />
                <HLabel>&locale.paddings.bottom;</HLabel>
                <Slider id="page:padding-bottom" Horizontal="true" Max="32" />
            </Group>
            
            <Bar Title="&locale.back;" />
            
            <PopImage id="page:back" />
        </Group>
    </Group>

    <Bar Title="Example" />

    <Page>
        <Group Name="Page A">
            <Text class="textinfo" Chainable="no" Text="<align=center>An object in<br>the first page" VCenter="true" />
        </Group>
        <Group Name="Page B">
            <Text class="textinfo" Chainable="no" Text="<align=center>An object in<br>the second page" VCenter="true" />
        </Group>
        <Group Name="Page C">
            <Text class="textinfo" Chainable="no" Text="<align=center>An object in<br>the third page" VCenter="true" />
        </Group>
    </Page>
</feelin:objects>
