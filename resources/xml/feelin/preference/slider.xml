<?xml version="1.0" ?>

<!ENTITY locale.container "Container" >
<!ENTITY locale.knob "Knob" >

<feelin:objects>
   <HGroup>
      <Group class="box" Title="&locale.container;">
         <Group Rows="2" SameWidth="true" style="spacing-vertical: 2;">
            <PopFrame id="slider:frame" />
            <PopScheme id="slider:color-scheme" />
            <VLabel>&locale.frame;</VLabel>
            <VLabel>&locale.scheme;</VLabel>
         </Group>

         <Bar Title="&locale.back;" />

         <Group Rows="2" SameWidth="true" style="spacing-vertical: 2;">
            <PopImage id="slider:back-horizontal" />
            <PopImage id="slider:back" />
            <VLabel>&locale.horizontal;</VLabel>
            <VLabel>&locale.vertical;</VLabel>
         </Group>
      </Group>

      <Group class="box" Title="&locale.knob;">
         <Group Columns="2">
            <HLabel>&locale.font;</HLabel>
            <PopFont id="slider-knob:font" />
            <HLabel>&locale.preparse;</HLabel>
            <PopPreParse id="slider-knob:preparse" />
         </Group>
         
         <Bar />

         <Group Rows="2" SameWidth="true" style="spacing-vertical: 2;">
            <PopFrame id="slider-knob:frame" Couple="true" />
            <PopScheme id="slider-knob:color-scheme" />
            <VLabel>&locale.frame;</VLabel>
            <VLabel>&locale.scheme;</VLabel>
         </Group>

         <Bar Title="&locale.back;" />

         <Group Rows="2" SameWidth="true" style="spacing-vertical: 2;">
            <PopImage id="slider-knob:back-horizontal" Couple="true" />
            <PopImage id="slider-knob:back" Couple="true" />
            <VLabel>&locale.horizontal;</VLabel>
            <VLabel>&locale.vertical;</VLabel>
         </Group>
      </Group>
   </HGroup>

   <Balance />
 
   <HGroup class="box" Title="Examples" Weight="20">
      <Group>
         <Slider Horizontal="true" Min="-10" Max="9" SetMax="height" />
         <Slider Horizontal="true" Max="2000" SetMax="height" />
      </Group>

      <Slider Min="-10" Max="9" SetMax="width" />
      <Slider Max="2000" SetMax="width" />
   </HGroup>
</feelin:objects>
 
