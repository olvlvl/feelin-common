<?xml version="1.0" ?>

<feelin:objects>
    <HGroup>
        <Group class="box" Title="&locale.container;">
            <Group Rows="2" SameWidth="true" style="spacing-vertical: 2;">
                <PopFrame id="prop:frame" />
                <PopScheme id="prop:color-scheme" />
                <VLabel Text="&locale.frame;" />
                <VLabel Text="&locale.scheme;" />
            </Group>
            
            <Bar Title="Back" />
            
            <Group Rows="2" SameWidth="true" style="spacing-vertical: 2;">
                <PopImage id="prop:back-horizontal" />
                <PopImage id="prop:back" />
                <VLabel>Horizontal</VLabel>
                <VLabel>Vertical</VLabel>
            </Group>
        </Group>

        <Group class="box" Title="&locale.knob;">
            <Group Rows="2" SameWidth="true" style="spacing-vertical: 2;">
                <PopFrame id="prop-knob:frame" Couple="true"/>
                <PopScheme id="prop-knob:color-scheme" />
                <VLabel Text="&locale.frame;" />
                <VLabel Text="&locale.scheme;" />
            </Group>
            
            <Bar Title="Back" />
            
            <Group Rows="2" SameWidth="true" style="spacing-vertical: 2;">
                <PopImage id="prop-knob:back-horizontal" Couple="true" />
                <PopImage id="prop-knob:back" Couple="true" />
                <VLabel>Horizontal</VLabel>
                <VLabel>Vertical</VLabel>
            </Group>
        </Group>
    </HGroup>
    
    <Balance />

    <HGroup class="box" Title="&locale.examples;" Weight="25">
        <Group>
            <Prop Horizontal="true" Entries="20" Visible="2" FixHeight="20" />
            <Prop Horizontal="true" Entries="20" Visible="4" FixHeight="20" />
        </Group>

        <Prop Entries="20" Visible="2" FixWidth="20" />
        <Prop Entries="20" Visible="4" FixWidth="20" />
    </HGroup>
</feelin:objects>
  
