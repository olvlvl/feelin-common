<?xml version="1.0" ?>

<feelin:objects>
    <HGroup>
        <Group class="box" Title="&locale.button;">
            <Group Columns="2">
               <HLabel>&locale.font;</HLabel>
               <PopFont id="cycle:font" />
               <HLabel>&locale.preparse;</HLabel>
               <PopPreParse id="cycle:preparse" />
            </Group>

            <Bar />
    
            <Group Rows="2" style="spacing-vertical: 2">
               <PopFrame id="cycle:frame" Couple="true"/>
               <PopImage id="cycle:back" Couple="true"/>
               <PopImage id="cycle-pop:image" />
               <VLabel>&locale.frame;</VLabel>
               <VLabel>&locale.back;</VLabel>
               <VLabel>&locale.image;</VLabel>
            </Group>
            
            <Bar Title="Layout" />
            
            <Radio id="cycle:layout" Horizontal="true">
                <Item Label="&locale.layout.right;" />
                <Item Label="&locale.layout.left;" />
            </Radio>
        </Group>

        <Group>
            <Group class="box" Columns="2" Title="&locale.control;">
                <HLabel>&locale.position;</HLabel>
                <Cycle id="cycle:position" Entries="&positions;" />
                <HLabel>&locale.level;</HLabel>
                <Slider id="cycle:level" Horizontal="true" Min="2" Max="20" Value="&level;" />
            </Group>

            <HGroup>
               <Group class="box" Rows="2" Title="Menu" style="spacing-vertical: 2;">
                  <PopFrame id="cycle-menu:frame" />
                  <PopImage id="cycle-menu:back" />
                  <VLabel>&locale.frame;</VLabel>
                  <VLabel>&locale.back;</VLabel>
               </Group>
               
               <Group class="box" Rows="2" Title="Item" style="spacing-vertical: 2;">
                  <PopFrame id="cycle-item:frame" Couple="true" />
                  <PopImage id="cycle-item:back" />
                  <VLabel>&locale.frame;</VLabel>
                  <VLabel>&locale.back;</VLabel>
               </Group> 
            </HGroup>
        </Group>
    </HGroup>
</feelin:objects>

