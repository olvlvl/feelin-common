<?xml version="1.0" ?>

<feelin:objects>
    <HGroup>
        <Group class="box" Title="&locale.gadget;">
            <HGroup>
                <HLabel>&locale.font;</HLabel>
                <PopFont id="string:font" />
            </HGroup>
            
            <Bar />

            <Group Rows="2" style="spacing-vertical: 2;">
                <PopFrame id="string:frame" Couple="true" />
                <PopImage id="string:back" Couple="true" />
                <PopScheme id="string:color-scheme" />
                <VLabel>&locale.frame;</VLabel>
                <VLabel>&locale.back;</VLabel>
                <VLabel>&locale.scheme;</VLabel>
            </Group>
        </Group>

        <Group class="box" Title="&locale.cursor;">
            <HGroup>
                <HLabel>&locale.speed;</HLabel>
                <Slider id="string:blink-speed" Horizontal="true" Max="50" SetMax="height" />
            </HGroup>
            
            <Bar />

            <Group Rows="2" style="spacing-vertical: 2;">
                <PopImage id="string:cursor" />
                <PopImage id="string:blink-image" />
                <VLabel>&locale.cursor;</VLabel>
                <VLabel>&locale.blink;</VLabel>
            </Group>
        </Group>
    </HGroup>

    <Group class="box" Rows="2" Title="&locale.text;" style="spacing-vertical: 2;">
        <PopColor id="string:text-active" />
        <PopColor id="string:text-inactive" />
        <PopColor id="string:text-block" />
        <VLabel>&locale.active;</VLabel>
        <VLabel>&locale.inactive;</VLabel>
        <VLabel>&locale.block;</VLabel>
    </Group>
</feelin:objects>
