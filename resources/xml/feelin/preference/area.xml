<?xml version="1.0" ?>

<feelin:objects>
    <HGroup>
        <Group class="box" Title="&locale.button;">
            <HGroup>
                <HLabel>&locale.font;</HLabel>
                <PopFont id="button:font" />
            </HGroup>
            
            <Bar />

            <Group Rows="2" style="spacing-vertical: 2;">
                <PopFrame id="button:frame" Couple="true" />
                <PopImage id="button:back" Couple="true" />
                <PopScheme id="button:color-scheme" />
                <VLabel>&locale.frame;</VLabel>
                <VLabel>&locale.back;</VLabel>
                <VLabel>&locale.scheme;</VLabel>
            </Group>

            <Bar />
            <SimpleButton Chainable="false">&locale.example;</SimpleButton>
        </Group>

        <Group Title="&locale.text;" class="box">
            <HGroup>
                <HLabel>&locale.font;</HLabel>
                <PopFont id="textinfo:font" />
            </HGroup>

            <Bar />

            <Group Rows="2" style="spacing-vertical: 2;">
                <PopFrame id="textinfo:frame" />
                <PopImage id="textinfo:back" />
                <PopScheme id="textinfo:color-scheme" />
                <VLabel>&locale.frame;</VLabel>
                <VLabel>&locale.back;</VLabel>
                <VLabel>&locale.scheme;</VLabel>
            </Group>

            <Bar />
            <Text class="textinfo" Chainable="false" HCenter="true" Text="&locale.example;" SetMax="height" />
        </Group>
    </HGroup>
</feelin:objects>

