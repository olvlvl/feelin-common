<?xml version="1.0" ?>

<!ENTITY locale.background  "background" >
<!ENTITY locale.horiz       "horiz." >
<!ENTITY locale.verti       "verti." >
<!ENTITY locale.disposition "Disposition" >

<feelin:objects>
    <HGroup>
        <Group>
            <Group class="box" Horizontal="true" Title="&locale.container;">
                <Group Rows="2" style="spacing-vertical: 2;">
                    <PopFrame id="scrollbar-prop:frame" Couple="true" />
                    <PopScheme id="scrollbar-prop:color-scheme" />
                    <VLabel>&locale.frame;</VLabel>
                    <VLabel>&locale.scheme;</VLabel>
                </Group>

                <Group>
                    <Bar Title="&locale.background;" />

                    <Group Rows="2" style="spacing-vertical: 2;">
                        <PopImage id="scrollbar-prop:back-horizontal" Couple="true" />
                        <PopImage id="scrollbar-prop:back" Couple="true" />
                        <VLabel>&locale.horiz;</VLabel>
                        <VLabel>&locale.verti;</VLabel>
                    </Group>
                </Group>
            </Group>

            <Group class="box" Horizontal="true" Title="&locale.knob;">
                <Group Rows="2" style="spacing-vertical: 2;">
                    <PopFrame id="scrollbar-knob:frame" Couple="true" />
                    <PopScheme id="scrollbar-knob:color-scheme" />
                    <VLabel>&locale.frame;</VLabel>
                    <VLabel>&locale.scheme;</VLabel>
                </Group>
                    
                <Group>
                    <Bar Title="&locale.background;" />

                    <Group Rows="2" style="spacing-vertical: 2;">
                        <PopImage id="scrollbar-knob:back-horizontal" Couple="true" />
                        <PopImage id="scrollbar-knob:back" Couple="true" />
                        <VLabel>&locale.horiz;</VLabel>
                        <VLabel>&locale.verti;</VLabel>
                    </Group>
                </Group>
            </Group>

            <Group class="box" Horizontal="true" Title="&locale.scrollbar;">
                <Group Rows="2" style="spacing-vertical: 2;">
                    <PopFrame id="scrollbar:frame" Couple="true" />
                    <PopScheme id="scrollbar:color-scheme" />
                    <VLabel>&locale.frame;</VLabel>
                    <VLabel>&locale.scheme;</VLabel>
                </Group>

                <Group>
                    <Bar Title="&locale.background;" />

                    <Group Rows="2" style="spacing-vertical: 2;">
                        <PopImage id="scrollbar:back-horizontal" Couple="true" />
                        <PopImage id="scrollbar:back" Couple="true" />
                        <VLabel>&locale.horiz;</VLabel>
                        <VLabel>&locale.verti;</VLabel>
                    </Group>
                </Group>
            </Group>
        </Group>

        <Balance />

        <Group class="box" Title="Arrows">
            <Page>
                <Group Rows="2" Name="Left" style="spacing-vertical: 2;">
                   <PopFrame id="scrollbar-arrow-left:frame" Couple="true" />
                   <PopImage id="scrollbar-arrow-left:back" Couple="true" />
                   <PopImage id="scrollbar-arrow-left:image" Couple="true" />
                   <PopScheme id="scrollbar-arrow-left:color-scheme" />
                   <VLabel>&locale.frame;</VLabel>
                   <VLabel>&locale.back;</VLabel>
                   <VLabel>&locale.image;</VLabel>
                   <VLabel>&locale.scheme;</VLabel>
                </Group>

                <Group Rows="2" Name="Right" style="spacing-vertical: 2;">
                   <PopFrame id="scrollbar-arrow-right:frame" Couple="true" />
                   <PopImage id="scrollbar-arrow-right:back" Couple="true" />
                   <PopImage id="scrollbar-arrow-right:image" Couple="true" />
                   <PopScheme id="scrollbar-arrow-right:color-scheme" />
                   <VLabel>&locale.frame;</VLabel>
                   <VLabel>&locale.back;</VLabel>
                   <VLabel>&locale.image;</VLabel>
                   <VLabel>&locale.scheme;</VLabel>
                </Group>

                <Group Rows="2" Name="Top" style="spacing-vertical: 2;">
                   <PopFrame id="scrollbar-arrow-top:frame" Couple="true" />
                   <PopImage id="scrollbar-arrow-top:back" Couple="true" />
                   <PopImage id="scrollbar-arrow-top:image" Couple="true" />
                   <PopScheme id="scrollbar-arrow-top:color-scheme" />
                   <VLabel>&locale.frame;</VLabel>
                   <VLabel>&locale.back;</VLabel>
                   <VLabel>&locale.image;</VLabel>
                   <VLabel>&locale.scheme;</VLabel>
                </Group>

                <Group Rows="2" Name="Bottom" style="spacing-vertical: 2;">
                   <PopFrame id="scrollbar-arrow-bottom:frame" Couple="true" />
                   <PopImage id="scrollbar-arrow-bottom:back" Couple="true" />
                   <PopImage id="scrollbar-arrow-bottom:image" Couple="true" />
                   <PopScheme id="scrollbar-arrow-bottom:color-scheme" />
                   <VLabel>&locale.frame;</VLabel>
                   <VLabel>&locale.back;</VLabel>
                   <VLabel>&locale.image;</VLabel>
                   <VLabel>&locale.scheme;</VLabel>
                </Group>
            </Page>

            <Bar SetMax="height" Title="&locale.disposition;" />
         
            <Radio id="scrollbar:type" Columns="2">
                <Item><Scrollbar Horizontal="true" Entries="20" Visible="5" style="type: symetric" /></Item>
                <Item><Scrollbar Horizontal="true" Entries="20" Visible="5" style="type: start" /></Item>
                <Item><Scrollbar Horizontal="true" Entries="20" Visible="5" style="type: end" /></Item>
                <Item><Scrollbar Horizontal="true" Entries="20" Visible="5" style="type: clear" /></Item>
            </Radio>
        </Group>
    </HGroup>
</feelin:objects>
