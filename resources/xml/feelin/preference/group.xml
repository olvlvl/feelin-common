<?xml version="1.0" ?>

<feelin:objects>
    <Group Horizontal="true">
        <Group>
            <Group class="box" Columns="2" Title="&locale.title;">
                <HLabel>&locale.position;</HLabel>
                <Cycle id="box:frame-position" Entries="&locale.positions;" SetMax="height" />
                <HLabel>&locale.preparse;</HLabel>
                <PopPreParse id="box:frame-preparse" />
                <HLabel>&locale.font;</HLabel>
                <PopFont id="box:frame-font" />
            </Group>
            
            <Group class="box" Rows="2" Title="&locale.frames;">
                <PopFrame id="box:frame" />
                <PopFrame id="preferencegroup:frame" />
                <VLabel>&locale.normal;</VLabel>
                <VLabel>&locale.settings;</VLabel>
            </Group>
        </Group>

        <Group>
            <Group class="box" Rows="2" Title="&locale.spacing;" Weight="50">
                <HLabel>&locale.horiz;</HLabel>
                <Slider id="group:spacing-horizontal" Horizontal="true" Max="32" />
                <HLabel>&locale.verti;</HLabel>
                <Slider id="group:spacing-vertical" Horizontal="true" Max="32" />
            </Group>

            <Group class="box" Rows="2" Title="&locale.backs;">
                <PopImage id="box:back" />
                <PopImage id="preferencegroup:back" />
                <VLabel>&locale.normal;</VLabel>
                <VLabel>&locale.settings;</VLabel>
            </Group>
        </Group>
    </Group>
</feelin:objects>
