<?xml version="1.0" ?>

<feelin:objects>
   <Group>
      <HGroup>
         <Group class="box" Title="Input">
            <Group Rows="2" style="spacing-vertical :2;">
               <PopFrame id="list:frame" />
               <PopImage id="list:back" />
               <PopScheme id="list:color-scheme" />
               <VLabel>Frame</VLabel>
               <VLabel>Back</VLabel>
               <VLabel>Scheme</VLabel>
            </Group>
            
            <Bar Title="Title Cells" />
            
            <Group Rows="2" style="spacing-vertical: 2;">
               <PopFrame id="list-title:frame" />
               <PopImage id="list-title:back" />
               <PopScheme id="list-title:color-scheme" />
               <VLabel>Frame</VLabel>
               <VLabel>Back</VLabel>
               <VLabel>Scheme</VLabel>
            </Group>
         </Group>
         
         <Group class="box" Title="Read">
            <Group Rows="2" style="spacing-vertical: 2;">
               <PopFrame id="list-read:frame" />
               <PopImage id="list-read:back" />
               <PopScheme id="list-read:color-scheme" />
               <VLabel>Frame</VLabel>
               <VLabel>Back</VLabel>
               <VLabel>Scheme</VLabel>
            </Group>

            <Bar Title="Title Cells" />

            <Group Rows="2" style="spacing-vertical: 2;">
               <PopFrame id="list-read-title:frame" />
               <PopImage id="list-read-title:back" />
               <PopScheme id="list-read-title:color-scheme" />
               <VLabel>Frame</VLabel>
               <VLabel>Back</VLabel>
               <VLabel>Scheme</VLabel>
            </Group>
         </Group>
      </HGroup>
   
      <HGroup SetMax="height">
         <Group class="box" Rows="2" Title="Cursor" style="spacing-vertical: 2;">
            <PopImage id="list:cursor-active" />
            <PopImage id="list:cursor-selected" />
            <VLabel>Active</VLabel>
            <VLabel>Selected</VLabel>
         </Group>
         
         <Group>   
            <Group class="box" Columns="2" Title="Fonts">
               <HLabel>Normal</HLabel>
               <PopFont id="list:font-prop" />
               <HLabel>Fixed</HLabel>
               <PopFont id="list:font-fixed" />
               <HLabel>Spacing</HLabel>
               <Slider id="list:spacing" Horizontal="true" SetMax="height" Max="9" />
            </Group>

            <HGroup class="box" Title="Wheel">
               <HLabel>Steps</HLabel>
               <Slider id="list:steps" Horizontal="true" SetMax="height" Max="10" />
            </HGroup>
         </Group>
      </HGroup>
   </Group>
</feelin:objects>
