<?xml version="1.0" ?>

<feelin:objects>
    <Group>
        <HGroup>
            <Group class="box" Columns="2" Title="Dimensions">
                <HLabel>H. Spacing</HLabel>
                <Slider id="decorator-flatty-bar:spacing-horizontal" Horizontal="true" Max="32" />
                <HLabel>V. Spacing</HLabel>
                <Slider id="decorator-flatty-bar:spacing-vertical" Horizontal="true" Max="32" />
                <HLabel>Sizebar</HLabel>
                <Slider id="decorator-flatty:sizebar-height" Horizontal="true" Max="32" Min="4" />
            </Group>
        </HGroup>

        <HGroup>
            <Group class="box" Rows="2" Title="Backgrounds">
                <PopImage id="decorator-flatty-bar:back" />
                <PopImage id="decorator-flatty:sizebar-back" />
                <HLabel>Dragbar</HLabel>
                <HLabel>Sizebar</HLabel>
            </Group>

            <Group class="box" Rows="2" Title="Images" style="spacing-vertical: 2;">
                <PopImage id="decorator-flatty-close:image" Couple="true" />
                <PopImage id="decorator-flatty-zoom:image" Couple="true" />
                <PopImage id="decorator-flatty-depth:image" Couple="true" />
                <VLabel>Close</VLabel>
                <VLabel>Zoom</VLabel>
                <VLabel>Depth</VLabel>
            </Group>
        </HGroup>
    </Group>
</feelin:objects>
