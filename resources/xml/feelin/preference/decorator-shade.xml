<?xml version="1.0" ?>

<feelin:objects>
    <Group class="box" Title="Dimensions">
        <HGroup>
            <HLabel>Border</HLabel>
            <Slider id="decorator-shade:border" Horizontal="true" SetMax="height" Min="2" Max="16" />
        </HGroup>

        <Bar Title="Gadgets" />

        <Group Columns="2">
            <HLabel>Width</HLabel>
            <Slider id="decorator-shade:gadgets-width" Horizontal="true" SetMax="height" Min="6" Max="32" />
            <HLabel>Height</HLabel>
            <Slider id="decorator-shade:gadgets-height" Horizontal="true" SetMax="height" Min="6" Max="32" />
        </Group>
    </Group>
</feelin:objects>
